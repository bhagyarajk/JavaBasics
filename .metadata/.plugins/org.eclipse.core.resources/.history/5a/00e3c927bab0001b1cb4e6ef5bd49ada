package com.keepitsimple.java;

public class Patterns {
public static void main(String[] args) {
	System.out.println("Here we learn about the pattern");
	
	// Pattern No.1
	for (int i = 0; i < 5; i++) {
		for (int j = 0; j < i; j++) {
			System.out.print(i + " ");
		}
		System.out.println("\n");
		
	}
	
	for (int i = 0; i < args.length; i++) {
		
	}
}
}
