package com.keepitsimple.java8.lambdaexpressions;

import java.util.ArrayList;
import java.util.Collections;

public class LambdaWithComparatorInterfaceinList {
	public static void main(String[] args) {
		System.out.println("Main method started");
		ArrayList<Integer> arrayList = new ArrayList<Integer>();
		arrayList.add(10);
		arrayList.add(20);
		arrayList.add(0);
		arrayList.add(-10);
		arrayList.add(50);

		// output : insertion order preserved : [10, 20, 0, -10, 50]
		System.out.println(arrayList);
		// sort method will sort the list in the default natural sorting order, for integer it's 
		Collections.sort(arrayList);

	}
}
