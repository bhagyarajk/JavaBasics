package com.keepitsimple.java;

class ThisAndSuperKeyword extends SubClass {

}

class SubClass {

	int a;
	int b;

	public SubClass(int a, int b) {
		super();
		// this keyword always holds the address of the currently executing object
		// or the object on which the current method is been invoked
		// when we have both the non-static and the local variables with the same name
		// inorder to distinguish them we will use this keyword
		this.a = a;
		this.b = b;
	}

	public void display() {

		System.out.println("executing display method of the non-static method ");
		System.out.println(this.a);
	}

	public static void demo() {
		System.out.println("executing demo method of the static method ..");
		// this can only be used inside the constructor or the non-static method
		// System.out.println(this.a);
	}

}
